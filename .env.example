# متغيرات البيئة - نسخة المثال
# انسخ هذا الملف إلى .env وأضف قيمك الخاصة

# ===== قاعدة البيانات =====
DATABASE_URL=mysql://user:password@localhost:3306/sami_pharmacy

# ===== Odoo ERP =====
ODOO_URL=https://health-path.erp-ksa.aumet.com
ODOO_DB=sami_pharmacy
ODOO_USERNAME=sami@aumet.com
ODOO_PASSWORD=your_password_here

# ===== Supabase =====
SUPABASE_URL=https://ajcbqdlpovpxbzltbjfl.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ===== الخادم =====
PORT=3000
NODE_ENV=development
LOG_LEVEL=debug

# ===== الأمان =====
JWT_SECRET=your_very_secure_jwt_secret_key_here
SESSION_SECRET=your_very_secure_session_secret_here

# ===== البريد الإلكتروني (SMTP) =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@sami-pharmacy.com
ALERT_EMAIL=admin@sami-pharmacy.com

# ===== التطبيق =====
APP_NAME=منصة التقارير والإحصائيات - صيدلية سامي
APP_URL=http://localhost:3000
APP_LOGO=https://cdn.sami-pharmacy.com/logo.png

# ===== المزامنة التلقائية =====
SYNC_INTERVAL=3600000
SYNC_ENABLED=true
SYNC_RETRIES=3

# ===== المراقبة والسجلات =====
LOG_FILE=./logs/app.log
ERROR_LOG_FILE=./logs/error.log

# ===== النسخ الاحتياطية =====
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_PATH=./backups

# ===== التصدير =====
EXPORT_MAX_ROWS=10000
EXPORT_TEMP_DIR=./tmp/exports

# ===== الأداء =====
CACHE_ENABLED=true
CACHE_TTL=3600
COMPRESSION_ENABLED=true

# ===== الأمان الإضافي =====
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000

# ===== GitHub =====
GITHUB_TOKEN=your_github_token_here
